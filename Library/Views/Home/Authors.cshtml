@{
  Layout = "_Layout";
}

<h1>Library</h1>
<hr />
<h2>Authors:</h2>
@if (Model.Count != 0)
{
  <ol>
    @foreach (var author in Model)
    {
      <li><a href='/authors/@author.GetId()'>@author.GetAuthorName()</a></li>
    }
  </ol>
}
<h4><a href="/authors/new">Add new author</a></h4>
<h4><a href="/librarian">Return to directory</a></h4>
