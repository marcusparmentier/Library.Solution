@{
  Layout = "_Layout";
}

<h1>Library</h1>
<hr />
<h2>Books:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var book in Model)
    {
      <li><a href="/books/@book.GetId()">@book.GetTitle()</a></li>
    }
  </ul>
}
<h4><a href="/books/new">Add a new book</a></h4>
<h4><a href="/">Return home</a></h4>
