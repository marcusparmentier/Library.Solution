@{
  Layout = "_Layout";
}

<h1>Library</h1>
<hr />
<h2>Books:</h2>
@if (Model.Count != 0)
{
  <ol>
    @foreach (var book in Model)
    {
      <li><a href="/books/@book.GetId()">@book.GetTitle() || @book.GetGenre()</a></li>
    }
  </ol>
}

<h4><a href="/books/new">Add a new Book</a></h4>
<h4><a href="/books/search">Search for a Book(Title/Author)</a></h4>
<h4><a href="/librarian">Return to Directory</a></h4>
